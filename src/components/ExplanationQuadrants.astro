<style>
  .quadrantWrapper {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }
  .explanationQuadrants {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background-color: var(--color-green1);
    grid-gap: 1px;
  }
  .explanationQuadrants > div {
    background-color: var(--color-bg);
  }
  .explanationQuadrants > div:nth-child(4n + 1),
  .explanationQuadrants > div:nth-child(4n + 2) {
    padding-bottom: 20px;
  }
  .explanationQuadrants > div:nth-child(4n + 3),
  .explanationQuadrants > div:nth-child(4n + 4) {
    padding-top: 20px;
  }
  .explanationQuadrants > div:nth-child(odd) {
    padding-right: 20px;
  }
  .explanationQuadrants > div:nth-child(even) {
    padding-left: 20px;
  }
</style>
